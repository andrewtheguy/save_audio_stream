{
  "imports": {
    "react": "https://esm.sh/react@18.3.1",
    "react/": "https://esm.sh/react@18.3.1/",
    "react-dom": "https://esm.sh/react-dom@18.3.1",
    "react-dom/client": "https://esm.sh/react-dom@18.3.1/client",
    "dashjs": "https://esm.sh/dashjs@4.7.4",
    "hls.js": "https://esm.sh/hls.js@1.6.15",
    "@/": "./src/"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run dev.ts",
    "build": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run build.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
