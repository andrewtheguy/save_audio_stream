{
  "imports": {
    "react": "npm:react@18.3.1",
    "react/": "npm:react@18.3.1/",
    "react/jsx-runtime": "npm:react@18.3.1/jsx-runtime",
    "react/jsx-dev-runtime": "npm:react@18.3.1/jsx-dev-runtime",
    "react-dom": "npm:react-dom@18.3.1",
    "react-dom/client": "npm:react-dom@18.3.1/client",
    "react-router-dom": "npm:react-router-dom@6.28.0",
    "dashjs": "npm:dashjs@4.7.4",
    "hls.js": "npm:hls.js@1.6.15",
    "@/": "./src/"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true
  },
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run dev.ts",
    "build": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run build.ts"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
